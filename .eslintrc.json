{
    "extends": [
        "airbnb"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-var": "error",
        "comma-dangle": ["error", "never"],
        "class-methods-use-this": 0,
        "max-len": 0,
        "no-plusplus": 0,
        "no-unused-vars": ["error", { "varsIgnorePattern": "Todo|_KEY" }],
        "prefer-const": 0
    },
    "env": {
        "browser": true
    },
    "globals": {
        "Matreshka": true,
        "Todo": true,
        "Todos": true,
        "ENTER_KEY": true,
        "ESC_KEY": true
    }
}
